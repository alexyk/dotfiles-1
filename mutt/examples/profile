mailboxes +<john-doe>/INBOX \
          +<john-doe>/sent \
          +<john-doe>/flagged \
          +<john-doe>/archive \
          +<john-doe>/trash \
          +temporary/search

set mbox         = "+<john-doe>/archive"
set postponed    = "+<john-doe>/drafts"
set reverse_name = yes
